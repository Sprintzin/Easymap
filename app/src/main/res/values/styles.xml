<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabIndicatorColor">@color/google_pink</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/google_blue</item>

    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">10dp</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
    </style>
    <style name="Snackbar" />

    <style name="Snackbar.Text">
        <item name="android:paddingBottom">@dimen/sb__text_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/sb__text_padding_left</item>
        <item name="android:paddingTop">@dimen/sb__text_padding_top</item>
        <item name="android:paddingRight">@dimen/sb__text_padding_right</item>
        <item name="android:textSize">@dimen/sb__text_size</item>
        <item name="android:textColor">@color/sb__text_color</item>
    </style>

    <style name="Snackbar.Text.Action">
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">true</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@drawable/sb_btn_bg</item>
    </style>
</resources>
